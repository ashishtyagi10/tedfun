rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {

    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }

    function isAdmin() {
      return request.auth != null &&
        firestore.get(/databases/(default)/documents/donors/$(request.auth.uid)).data.role in ['admin', 'super_admin'];
    }

    function isValidImage() {
      return request.resource.contentType.matches('image/.*')
             && request.resource.size < 10 * 1024 * 1024; // 10MB max
    }

    function isValidDocument() {
      return request.resource.contentType.matches('application/pdf')
             && request.resource.size < 20 * 1024 * 1024; // 20MB max
    }

    // Student photos - public read, authenticated upload
    match /students/{studentId}/photos/{fileName} {
      allow read: if true;
      allow create: if isValidImage();
      allow update, delete: if isAdmin();
    }

    // Student documents - admin only
    match /students/{studentId}/documents/{fileName} {
      allow read: if isAdmin();
      allow create: if isValidDocument();
      allow update, delete: if isAdmin();
    }

    // Donation proofs - admin only
    match /donations/{donationId}/proofs/{fileName} {
      allow read: if isAdmin();
      allow write: if isAdmin();
    }

    // Campaign images - public read, admin write
    match /campaigns/{campaignId}/{fileName} {
      allow read: if true;
      allow write: if isAdmin() && isValidImage();
    }

    // Donor profile photos
    match /donors/{donorId}/profile/{fileName} {
      allow read: if true;
      allow write: if request.auth.uid == donorId && isValidImage();
    }

    // Tax receipts - owner and admin read only
    match /receipts/{donorId}/{fileName} {
      allow read: if request.auth.uid == donorId || isAdmin();
      allow write: if false; // Only Cloud Functions
    }
  }
}
