# ===========================================
# LOCAL DEVELOPMENT ENVIRONMENT VARIABLES
# ===========================================
# Copy this file to .env.local and fill in your values
# NEVER commit .env.local to git!

# Firebase Configuration (from Firebase Console > Project Settings > Your Apps)
NEXT_PUBLIC_FIREBASE_API_KEY=
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=tedfun-2f3cb.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=tedfun-2f3cb
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=tedfun-2f3cb.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=
NEXT_PUBLIC_FIREBASE_APP_ID=

# Firebase Admin (from Firebase Console > Project Settings > Service Accounts)
# Download the JSON key file, then paste the ENTIRE content as a single line
# Example: {"type":"service_account","project_id":"tedfun-2f3cb",...}
FIREBASE_SERVICE_ACCOUNT_KEY=

# Stripe Configuration (from Stripe Dashboard > Developers > API Keys)
# Use TEST keys for local development (pk_test_... and sk_test_...)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=
STRIPE_SECRET_KEY=

# Stripe Webhook Secret (from Stripe Dashboard > Developers > Webhooks)
# For local testing, use Stripe CLI: stripe listen --forward-to localhost:3000/api/stripe/webhook
STRIPE_WEBHOOK_SECRET=

# App Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
